<div class="d-flex flex-column bg-white p-1 py-3 rounded" style="width: 100%; height: 75vh;">
  <form action="/car/<%= breadcrumbLink %>" method="post" enctype="multipart/form-data" class="input-group d-flex flex-column justify-content-between" style="max-width: 65%; height: 100%;">
    <% if (car) { %>
      <input type="text" hidden value="<%= car.id %>" name="id">
    <% } %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">
            <label class="fw-normal" for="name">Nama*</label>
          </th>
          <td>
            <input class="form-control" type="text" 
            <% if (car) { %>
              value="<%= car.name %>"
            <% } %> 
            placeholder="Car Name" id="name" name="name" required>
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="fw-normal" for="price">Harga*</label>
          </th>
          <td>
            <input class="form-control" type="number"
            <% if (car) { %>
              value="<%= car.price %>"
            <% } %> 
            placeholder="Car Price" id="price" name="price" required>
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="fw-normal" for="photo">Foto*</label>
          </th>
          <td>
            <input class="form-control" type="file" 
            <% if (car) { %>
              value="<%= car.photo %>"
            <% } %> 
            id="photo" name="photo" required>
            <span class="fw-light text-muted" style="font-size: 14px;">File size max, 2MB</span>
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="fw-normal" for="start">Start Rent</label>
          </th>
          <td>
            <input class="form-control" type="date"
            <% if (car) { %>
              value="<%= car.startRent %>"
            <% } %> 
            placeholder="-" id="start" name="startRent">
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="fw-normal" for="finish">Finish Rent</label>
          </th>
          <td>
            <input class="form-control" type="date" 
            <% if (car) { %>
              value="<%= car.finishRent %>"
            <% } %> 
            placeholder="-" id="finish" name="finishRent">
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="fw-normal" for="created">Created Rent</label>
          </th>
          <td>
            <input class="form-control" type="date" 
            <% if (car) { %>
              value="<%= car.createdRent %>"
            <% } %> 
            placeholder="-" id="created" name="createdRent">
          </td>
        </tr>
        <tr>
          <th scope="row">
            <label class="fw-normal" for="updated">Updated Rent</label>
          </th>
          <td>
            <input class="form-control" type="date" 
            <% if (car) { %>
              value="<%= car.updatedRent %>"
            <% } %> 
            placeholder="-" id="updated" name="updatedRent">
          </td>
        </tr>
      </tbody>
    </table>
    <div class="px-2">
      <button class="btn btn-outline-danger" type="reset">Cancel</button>
      <button class="btn btn-success" type="submit">Save</button>
    </div>
  </form>
</div>