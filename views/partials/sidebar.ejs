<div class="d-flex sticky-top">
  <div class="d-flex flex-column align-items-center justify-content-between flex-shrink-0 bg-primary" style="width: 4.5rem; height: 100vh;">
    <div class="d-flex flex-column align-items-center" style="width: 100%;">
      <div class="my-3">
        <a href="/dashboard">
          <img class="rounded" src="images/logo_sm.png" alt="logo small" width="30" height="30">
        </a>
      </div>
      <div class="py-2" style="width: 100%;  font-size: 12px">
        <a href="/dashboard">
          <div class="d-flex flex-column align-items-center justify-content-center">
            <img class="rounded" src="images/fi_home.svg" alt="dashboard" width="25" height="25">
            <span class="text-white">Dashboard</span>
          </div>
        </a>
      </div>
      <div class="py-2" style="width: 100%;  font-size: 12px">
        <a href="/cars">
          <div class="d-flex flex-column align-items-center justify-content-center">
            <img class="rounded" src="images/fi_truck.svg" alt="car" width="25" height="25">
            <span class="text-white">Cars</span>
          </div>
        </a>
      </div>
    </div>
    <form class="mt-5 m-2" action="/auth/logout" method="post">
      <button type="submit" class="btn btn-outline-primary">
        <span class="text-white">Logout</span>
      </button>
    </form>
  </div>

  <div class="d-flex flex-column flex-shrink-0 bg-white" style="width: 17rem; height: 100vh;">
    <div class="my-3 ms-4">
      <img class="rounded" src="images/logo.png" alt="logo small" width="100" height="30">
    </div>
    <div class="py-2 ms-4 mt-2 d-flex flex-column" style="width: 100%;">
      <!-- Dynamyc value -->
      <span class="text-secondary fs-5 fw-bold"><%= sidebarTitle %></span>
    </div>
    <div class="py-2 mt-1" style="width: 100%;">
      <a href="<%= sidebarMenuLink %>" style="text-decoration: none">
        <div class="d-flex flex-column justify-content-center px-4">
          <!-- Dynamic value -->
          <span class="text-dark fw-bold"><%= sidebarMenu %></span>
        </div>
      </a>
    </div>
  </div>
</div>