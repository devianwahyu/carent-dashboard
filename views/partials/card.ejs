<div class="bg-white p-3 rounded d-flex flex-column align-items-center border">
  <img class="mt-3 mb-4 rounded" src="images/uploads/<%= car.photo %>" alt="car" width="245" height="135">
  <div class="d-flex flex-column mb-2" style="width: 100%;">
    <span style="font-size: 14px;"><%= car.name %></span>
    <span class="fw-bold mt-2" style="font-size: 16px;">Rp<%= new Intl.NumberFormat(['ban', 'id']).format(Number(car.price))%> / hari</span>
    <div class="d-flex">
      <img src="images/fi_key.svg" alt="key">
      <span class="mt-2 ms-2" style="font-size: 14px;"><%= new Date(car.startRent).toLocaleDateString() %> - <%= new Date(car.finishRent).toLocaleDateString() %></span>
    </div>
    <div class="d-flex">
      <img src="images/fi_clock.svg" alt="date">
      <span class="mt-2 ms-2" style="font-size: 14px;">Updated at <%= new Date(car.updatedRent).toLocaleString() %></span>
    </div>
    <div class="d-flex justify-content-between mt-4">
      <form class="d-flex flex-grow-1" action="/car/delete/<%= car.id %> " method="post">
        <button type="submit" class="d-flex flex-grow-1 justify-content-center btn btn-lg btn-outline-danger w-50 me-2">
          <img src="images/fi_trash-2.svg" alt="trash" srcset="">
          <span class="fw-bold ms-1" style="font-size: 14px;">Delete</span>
        </button>
      </form>
      <form class="d-flex flex-grow-1" action="/edit/<%= car.id %> " method="get">
        <button type="submit" class="d-flex flex-grow-1 justify-content-center btn btn-lg btn-success w-50 ms-2">
          <img src="images/fi_edit.svg" alt="edit" srcset="">
          <span class="fw-bold ms-1" style="font-size: 14px;">Edit</span>
        </button>
      </form>
    </div>
  </div>
</div>